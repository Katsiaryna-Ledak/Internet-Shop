@model EShop.Domain.Entities.Product
<div class="item">
  @if (Model.ImageData != null) {
    <div style="float: left; margin-right: 20px">
      <img width="150" height="75" src="@Url.Action("GetImage", "Product", new { Model.ProductID })" />
    </div>
  }
    <hr />
  <h3>@Model.Name</h3>
  @Model.Description
      
  <div class="item">
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
    @Html.HiddenFor(x => x.ProductID)
    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
    <button class="actionButtons btn-mini btn-success" type="submit"><span class="glyphicon-plus"></span> Добавить в корзину</button>
    }
  </div>
  <h4>@Model.Price.ToString("c")</h4>
    <hr />
</div>